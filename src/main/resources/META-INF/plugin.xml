<idea-plugin>
    <id>com.tiobe.plugins.intellij</id>
    <name>TICS IntelliJ Plugin</name>
    <version>0.0</version>
    <vendor email="support@tiobe.com" url="http://www.tiobe.com">TIOBE Software B.V.</vendor>

    <description>Plugin that integrates the TICS Client into IntelliJ IDEA.</description>

    <!--<change-notes></change-notes>-->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="TICS.Analysis" text="TICS">
            <separator/>
            <action id="TICS.AnalyzeFile" class="com.tiobe.plugins.intellij.actions.AnalyzeFile"
                    text="Analyze file with TICS" icon="TiobeIcons.ANALYZE_FILE">
            </action>
            <action id="TICS.AnalyzeProject" class="com.tiobe.plugins.intellij.actions.AnalyzeProject"
                    text="Analyze project with TICS" icon="TiobeIcons.ANALYZE_PROJECT">
            </action>
            <action id="TICS.CancelAnalysis" class="com.tiobe.plugins.intellij.actions.CancelAnalysis"
                    text="Cancel analysis" icon="TiobeIcons.CANCEL_ANALYSIS">
            </action>
            <add-to-group group-id="AnalyzeMenu"/>
            <add-to-group group-id="NavBarToolBarOthers"/>
        </group>
        <action id="TICS.RunTICSConfig" class="com.tiobe.plugins.intellij.actions.RunTICSConfig"
                text="TICS Rule and Options configuration" icon="TiobeIcons.CONFIGURATION">
            <add-to-group group-id="NavBarToolBarOthers"/>
        </action>
    </actions>

</idea-plugin>