<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.tiobe.plugins.intellij</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>TICS</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@tiobe.com" url="http://www.tiobe.com">TIOBE Software BV</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>Plugin that integrates the TICS Client into IntelliJ IDEA and Rider.</description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <annotator language="" implementationClass="com.tiobe.plugins.intellij.analyzer.TicsProblemReporter"/>
    </extensions>

    <actions>
        <group id="TICS">
            <action id="TICS.AnalyzeFile" class="com.tiobe.plugins.intellij.actions.AnalyzeFile"
                    icon="/icons/TI_analyze_file.png" text="Analyze File"/>
            <action id="TICS.AnalyzeProject" class="com.tiobe.plugins.intellij.actions.AnalyzeProject"
                    icon="/icons/TI_analyze_project.png" text="Analyze Project"/>
            <action id="TICS.CancelAnalysis" class="com.tiobe.plugins.intellij.actions.CancelAnalysis"
                    icon="/icons/TI_cancel_analysis.png" text="Cancel Analysis"/>
            <action id="TICS.RunTicsConfig" class="com.tiobe.plugins.intellij.actions.RunTicsConfig"
                    icon="/icons/TI_configuration.png" text="TICS Configuration">
            </action>
        </group>

        <group>
            <separator/>
            <reference id="TICS"/>
            <add-to-group group-id="ToolbarRunGroup"/>
            <add-to-group group-id="RightToolbarSideGroup" anchor="first"/>
        </group>

        <group text="TICS" popup="true">
            <reference id="TICS"/>
            <action id="TICS.InstallTics" class="com.tiobe.plugins.intellij.actions.InstallTics"
                    icon="/icons/TI_install.png" text="Instal TICS"/>
            <add-to-group group-id="ToolsMenu"/>
        </group>

        <group>
            <reference id="TICS.AnalyzeFile"/>
            <reference id="TICS.CancelAnalysis"/>
            <add-to-group group-id="EditorPopupMenu"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
        </group>
    </actions>
</idea-plugin>